<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="800dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioButton
            android:id="@+id/use_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ใช้เฉพาะแผนก"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:enabled="false"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:textStyle="bold">

        </RadioButton>

        <RadioButton
            android:id="@+id/use_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ใช้หลายแผนก"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:textStyle="bold">

        </RadioButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เลือกแผนก"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="85dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etxt_searchsendsterile"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_edit"
                android:ems="10"
                android:hint="ค้นหา.."
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

            <Button
                android:id="@+id/bt_searchsendsterile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-51dp"
                android:layout_marginRight="22dp"
                android:layout_toRightOf="@id/etxt_searchsendsterile"
                android:background="@drawable/search" />

            <CheckBox
                android:id="@+id/Check_all"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="90dp"
                android:layout_alignParentBottom="true">

            </CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลือกทั้งหมด"
                android:layout_alignParentEnd="true"
                android:textSize="16dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="25dp">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="467dp"
        android:layout_marginTop="135dp"
        android:orientation="vertical"
        android:padding="6dp">

        <ListView
            android:id="@+id/list"
            android:layout_width="400dp"
            android:layout_height="467dp"
            android:background="@color/list_background_color">
        </ListView>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_save"
        android:layout_width="161dp"
        android:layout_height="70dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="230dp"
        android:src="@drawable/bt_save_newitem" />

</RelativeLayout>

