<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_remove"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_blue" />

        <TextView
            android:id="@+id/txt_usage_code"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/isRemark"
            android:maxLines="1"
            android:text="I0000-0000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorGray"
            android:gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_usage_code"
            android:maxLines="1"
            android:text="ItemName"
            android:textColor="@color/list_text_color"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:textSize="17dp"></TextView>

        <ImageView
            android:id="@+id/isRemark"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_toEndOf="@+id/imv_remove"
            android:layout_marginTop="5dp"
            android:background="@drawable/uncheck02_32"
            ></ImageView>

        <TextView
            android:id="@+id/txt_basket"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imv_remove"
            android:maxLines="1"
            android:text="xxxxxx"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorGray"
            android:background="#EEEEEE"
            android:layout_marginTop="20dp"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/txt_qty"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/text_edit"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/list_text_color"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/txt_age"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txt_qty"
            android:background="@drawable/text_edit"
            android:gravity="center|center_vertical"
            android:maxLines="2"
            android:text="0"
            android:textColor="@color/list_text_color"
            android:textSize="13dp"></TextView>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0"
        android:gravity="center|center_vertical"
        android:maxLines="1"
        android:text="id"
        android:textColor="@color/list_text_color"
        android:textSize="14dp"
        android:visibility="gone"></TextView>


</LinearLayout>




