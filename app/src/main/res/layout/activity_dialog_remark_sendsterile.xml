<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_curve">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="500dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:text="หมายเหตุ"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <CheckBox
                        android:id="@+id/check1"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:maxLines="1"
                        android:text="TextView"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/check2"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="TextView"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/check1"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/R2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <CheckBox
                        android:id="@+id/check3"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:maxLines="1"
                        android:text="TextView"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/check4"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="TextView"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/check3"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/R3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <CheckBox
                        android:id="@+id/check5"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:maxLines="1"
                        android:text="TextView"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/check6"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="TextView"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/check5"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp">

                    </CheckBox>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/text_remark"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:hint=" หมายเหตุ..."
            android:gravity="left|top"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:background="@drawable/login_block">

        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:id="@+id/summit"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:gravity="left|top"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:background="@drawable/btn_save">

            </Button>

            <Button
                android:id="@+id/cancle"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/summit"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:gravity="left|top"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:background="@drawable/btn_cancel_n">

            </Button>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
