<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="550dp">

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="550dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/box">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="จัดการผ้าหมดอายุในสต๊อกจ่ายกลาง"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="620dp"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

           <EditText
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:hint="ค้นหารายการ"
               android:paddingStart="20dp"
               android:background="@drawable/txt_edit_graywhite">
           </EditText>

            <EditText
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="330dp"
                android:hint="สแกนเช็ครายการ"
                android:paddingStart="20dp"
                android:background="@drawable/txt_edit_graywhite">
            </EditText>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="560dp"
                android:background="@drawable/ic_baseline">

            </ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="235dp"
                android:background="@drawable/ic_baseline_search">

            </ImageView>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp">

            </ListView>

        </RelativeLayout>

        <Button
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bt_back"
            android:layout_marginTop="460dp">

        </Button>

        <Button
            android:layout_width="180dp"
            android:layout_height="75dp"
           android:layout_alignParentEnd="true"
            android:background="@drawable/bt_back"
            android:layout_marginTop="460dp">

        </Button>

    </RelativeLayout>

</RelativeLayout>